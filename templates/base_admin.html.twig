<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('app_admin') }}">Admin area</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_users') }}">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_programme') }}">Programmes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_rooms') }}">Rooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_buildings') }}">Buildings</a>
                            </li>
                        </ul>
                        <div class="d-flex">
                            {% if is_granted('ROLE_USER') %}
                            <span class="nav-item">
                                <span class="nav-link">
                                    Hi {{ app.user.firstName }}
                                </span>

                            </span>
                            <span class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_logout') }}">Logout</a>
                            </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </nav>
        {% endblock %}
        <main class="flex-shrink-0  pt-5">
            {% block body %}{% endblock %}
        </main>

        {% block footer %}
            <footer class="footer mt-auto py-3 bg-light">
                <div class="container">
                    <span class="text-muted">What a nice footer</span>
                </div>
            </footer>
        {% endblock %}
    </body>
</html>
